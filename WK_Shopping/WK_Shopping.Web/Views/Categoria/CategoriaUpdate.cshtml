@model WK_Shopping.Web.Models.CategoriaModel

@{
    ViewData["Title"] = "Categorias";
}

<form asp-action="CategoriaUpdate">
    <input asp-for="Id" hidden>
    <br/>
    <div class="container border p-3">
        <h1 class="text-primary">Atualizar Categoria</h1>

        <hr/>
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Nome" class="control-label pt-2" style="font-size=20px;">Nome</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Nome" class="form-control"/>
                <span asp-validation-for="Nome" class="text-danger"/>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="CategoriaIndex" class="btn-primary btn form-control ">Voltar</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Atualizar" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
}