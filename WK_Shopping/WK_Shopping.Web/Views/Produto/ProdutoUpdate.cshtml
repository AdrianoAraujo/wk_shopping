@model WK_Shopping.Web.Models.ProdutoModel

@{
    ViewData["Title"] = "Produtos";
}

<form asp-action="ProdutoUpdate">
    <input asp-for="Id" hidden>
    <br/>
    <div class="container border p-3">
        <h1 class="text-primary">Atualizar Produto</h1>

        <hr/>
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Nome" class="control-label pt-2" style="font-size=20px;">Nome</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Nome" class="form-control"/>
                <span asp-validation-for="Nome" class="text-danger"/>
            </div>
            <div class="col-2">
                <label asp-for="CategoriaNome" class="control-label pt-2" style="font-size:20px;">Categoria</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoriaNome" class="form-control" />
                <span asp-validation-for="CategoriaNome" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Descricao" class="control-label pt-2" style="font-size:20px;">Descrição</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Descricao" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="ImagemURL" class="control-label pt-2" style="font-size:20px;">URL da Imagem</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImagemURL" class="form-control" />
                <span asp-validation-for="ImagemURL" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Preco" class="control-label pt-2" style="font-size:20px;">Preço</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="ProdutoIndex" class="btn-primary btn form-control ">Voltar</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Atualizar" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
}